<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.metropolis.authorization.dal.persistence.SysUserMapper">

    <resultMap type="com.metropolis.authorization.dal.entitys.SysUser" id="SysUserMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="account" column="account" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="salt" column="salt" jdbcType="VARCHAR"/>
        <result property="locked" column="locked" jdbcType="BOOLEAN"/>
        <result property="createtime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="lastLoginTime" column="last_login_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="BOOLEAN"/>
    </resultMap>

    <select id="findUserByName" resultMap="SysUserMap">
        select
          id,account,username, password, salt, locked, create_time, last_login_time, is_delete
        from sys_user
        <where>
            <if test="username!=null">
                username=#{username}
            </if>
        </where>
    </select>

    <select id="findUserByAccount" resultMap="SysUserMap">
        select
        id,account,username, password, salt, locked, create_time, last_login_time, is_delete
        from sys_user
        <where>
            <if test="username!=null">
                account=#{account}
            </if>
        </where>
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="SysUserMap">
        select
          id, username, password, salt, locked, create_time, last_login_time, is_delete
        from metropolis.sys_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysUserMap">
        select
          id, username, password, salt, locked, create_time, last_login_time, is_delete
        from metropolis.sys_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysUserMap">
        select
          id, username, password, salt, locked, create_time, last_login_time, is_delete
        from metropolis.sys_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="salt != null and salt != ''">
                and salt = #{salt}
            </if>
            <if test="locked != null">
                and locked = #{locked}
            </if>
            <if test="createtime != null">
                and create_time = #{createtime}
            </if>
            <if test="lastLoginTime != null">
                and last_login_time = #{lastLoginTime}
            </if>
            <if test="isDelete != null">
                and is_delete = #{isDelete}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="saveUser" keyProperty="id" useGeneratedKeys="true" parameterType="sysUser">
        insert into sys_user(username, password, salt, locked, create_time, last_login_time, is_delete)
        values (#{username}, #{password}, #{salt}, #{locked}, #{createtime}, #{lastLoginTime}, #{isDelete})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update metropolis.sys_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="salt != null and salt != ''">
                salt = #{salt},
            </if>
            <if test="locked != null">
                locked = #{locked},
            </if>
            <if test="createtime != null">
                create_time = #{createtime},
            </if>
            <if test="lastLoginTime != null">
                last_login_time = #{lastLoginTime},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from metropolis.sys_user where id = #{id}
    </delete>

</mapper>